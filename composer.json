{
    "name": "aerni/factory",
    "description": "Quickly whip up fake content",
    "keywords": [
        "statamic",
        "factory"
    ],
    "homepage": "https://github.com/aerni/statamic-factory",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Aerni",
            "email": "hello@michaelaerni.ch",
            "homepage": "https://www.michaelaerni.ch",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "fakerphp/faker": "^1.15.0",
        "statamic/cms": "^3.0 || ^3.1 || ^3.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "nunomaduro/collision": "^5.0",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Aerni\\Factory\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aerni\\Factory\\Tests\\": "tests"
        },
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "statamic": {
            "name": "Factory",
            "description": "Quicly whip up fake content"
        },
        "laravel": {
            "providers": [
                "Aerni\\Factory\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
